generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 Int      @id @default(autoincrement())
  email              String   @unique
  password           String
  role               Role     @default(ADMIN)
  mustChangePassword Boolean  @default(false)
  createdAt          DateTime @default(now())
}

enum Role {
  ADMIN
}

model Report {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      Status   @default(pending)
  createdAt   DateTime @default(now())
}

enum Status {
  pending
  process
  resolved
}
